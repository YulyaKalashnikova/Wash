<Window x:Class="Wash.ChangeStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wash"
        mc:Ignorable="d"
        Title="ChangeStatusWindow" Height="450" Width="300" WindowStartupLocation="CenterScreen" Style="{StaticResource DefaultWindow}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Статус стирки"></TextBlock>
        <ComboBox Grid.Row="1" Name="CmbStatuses" SelectedIndex="0"></ComboBox>
        <Button Grid.Row="2" Name="BtnUpdate" Click="BtnUpdate_Click" Content="Изменить статус"></Button>
    </Grid>
</Window>
