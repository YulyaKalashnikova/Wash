<Window x:Class="Wash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wash"
        mc:Ignorable="d"
        Title="Авторизация - Постирушки" Height="450" Width="400" Icon="/icon.png" WindowStartupLocation="CenterScreen" Style="{StaticResource DefaultWindow}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Grid.Row="1" Grid.RowSpan="2" Source="/logo.jpg"></Image>
        <TextBox Grid.Column="1"  Grid.Row="1" Name="TbLogin"></TextBox>
        <PasswordBox Grid.Column="1" Grid.Row="2" Name="PbPassword"></PasswordBox>
        <Button Grid.Column="1" Grid.Row="3" Name="BtnLogin" Click="BtnLogin_Click" Content="Войти"></Button>
    </Grid>
</Window>
